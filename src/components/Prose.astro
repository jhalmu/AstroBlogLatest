---
// Prose.astro
---
<div class='prose prose-custom'>
	<slot />
</div>

<style>
	/* Include typography plugin styles manually */
	.prose {
		max-width: 70ch;
		color: rgb(var(--color-lavender-50));
		font-family: var(--font-lato);
	}

	/* Custom typography styles */
	.prose-custom {
		/* Headings */
		:where(h1, h2, h3, h4) {
			font-family: var(--font-playfair);
			color: rgb(var(--color-purple-50));
			margin-top: 1em;
			margin-bottom: 0.5em;
		}

		h1 {
			font-size: 2.25em;
			line-height: 1.1;
		}

		h2 {
			font-size: 1.875em;
			line-height: 1.2;
		}
		h3 {
			font-size: 1.5em;
			line-height: 1.3;
		}
		h4 {
			font-size: 1.25em;
			line-height: 1.4;
		}

		/* Paragraphs */
		p {
			margin-top: 0.5em;
			margin-bottom: 1em;
			line-height: 1.6;
			color: rgb(var(--color-lavender-100));
		}
		p + p {
			margin-top: 0.5em;
		}
		p + h2 {
			margin-top: 1.5em;
		}
		p + h3 {
			margin-top: 1.5em;
		}
		p + h4 {
			margin-top: 1.5em;
		}
		p + blockquote {
			margin-top: 1.5em;
		}
		p + pre {
			margin-top: 1.5em;
		}
		p + ul {
			margin-top: 1.5em;
		}
		p + ol {
			margin-top: 1.5em;
		}
		p + img {
			margin-top: 1.5em;
		}
		p + table {
			margin-top: 1.5em;
		}
		p + li {
			margin-top: 1.5em;
		}
		p + code {
			margin-top: 1.5em;
		}
		p + strong {
			margin-top: 1.5em;
		}
		p + em {
			margin-top: 1.5em;
		}
		p + small {
			margin-top: 1.5em;
		}
		p + hr {
			margin-top: 1.5em;
		}

		/* Links */
		a {
			color: rgb(var(--color-lavender-200));
			text-decoration: underline;
			text-decoration-thickness: 2px;
			text-underline-offset: 2px;
		}

		a:hover {
			color: rgb(var(--color-purple-50));
		}

		/* Other typography elements */
		strong {
			color: rgb(var(--color-lavender-200));
			font-weight: 600;
		}

		blockquote {
			font-style: italic;
			border-left: 4px solid rgb(var(--color-lavender-300));
			padding-left: 1em;
			color: rgb(var(--color-lavender-700));
		}

		/* Code blocks */
		pre {
			background-color: rgb(var(--color-lavender-50));
			border-radius: 0.5rem;
			padding: 1.25em;
			overflow-x: auto;
			margin-top: 1em;
		}

		code {
			font-size: 0.875em;
			color: rgb(var(--color-purple-200));
		}
		/* Lists */

		li {
			margin-bottom: 0.5em;
			list-style: '\2192' outside;
		}
		ul {
			margin-left: 1.5em;
			margin-top: 0.5em;
		}

		ol {
			margin-left: 1.5em;
			margin-top: 0.5em;
		}
		li::marker {
			color: rgb(var(--color-purple-200));
			font-weight: 600;
		}

		/* Images */
		/* img {
			max-width: 100%;
			height: auto;
			margin-top: 1em;
			border-radius: 0.5rem;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			transition: transform 0.3s ease;

		} */
		/* Tables */
		table {
			width: 100%;
			border-collapse: collapse;
			margin-top: 1em;
			margin-bottom: 1em;
		}
		th,
		td {
			padding: 0.5em;
			border: 1px solid rgb(var(--color-purple-200));
			text-align: left;
		}
		th {
			background-color: rgb(var(--color-lavender-100));
			color: rgb(var(--color-purple-50));
		}
		td {
			background-color: rgb(var(--color-lavender-50));
			color: rgb(var(--color-purple-200));
		}
	}
</style>
